{
  "compilerOptions": {
    "lib": [
      "es2022",
      "DOM",
    ],
    "target": "es2022",
    "module": "ES2022",
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist/*",
    "node_modules"
  ]
}
